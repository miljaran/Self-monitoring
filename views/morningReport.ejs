<%- include('./partials/header.ejs') %>
    <h1>Morning report!</h1>
    <form method="POST" action="/behavior/reporting/morning">
      <%- include('./partials/errors.ejs', { errors: errors}) %>
      <label for='date'>Date (YYYY-MM-DD): </label>
      <input type='date' name='date' value="<%= date %>" />
      <label for='sleepDuration'>Sleep duration (in hours): </label>
      <input type='number' step="0.001" name='sleepDuration' value="<%= sleepDuration %>"/>
      <label for='sleepQuality'>Sleep quality: </label>
      <fieldset id="sleepQuality">
        <input type="radio" value="1" name="sleepQuality"> 1<br>
        <input type="radio" value="2" name="sleepQuality"> 2<br>
        <input type="radio" value="3" name="sleepQuality"> 3<br>
        <input type="radio" value="4" name="sleepQuality"> 4<br>
        <input type="radio" value="5" name="sleepQuality"> 5<br>
      </fieldset>
      <label for='mood'>Mood: </label>
      <fieldset id="mood">
        <input type="radio" value="1" name="mood"> 1<br>
        <input type="radio" value="2" name="mood"> 2<br>
        <input type="radio" value="3" name="mood"> 3<br>
        <input type="radio" value="4" name="mood"> 4<br>
        <input type="radio" value="5" name="mood"> 5<br>
      </fieldset>
      <input type='submit' value="Submit!"/>
    </form>
<%- include('./partials/footer.ejs') %>
