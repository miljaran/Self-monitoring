<%- include('./partials/header.ejs') %>
      <h1>Evening report</h1>
      <form method="POST" action="/behavior/reporting/evening">
        <%- include('./partials/errors.ejs', { errors: errors}) %>
        <label for='date'>Date (YYYY-MM-DD): </label>
        <input type='date' name='date' value="<%= date %>" /><br>
        <label for='sportsTime'>Time spent on sports and exercise (in hours): </label>
        <input type='number' step="0.001" name='sportsTime' value ="<%=sportsTime%>"/><br>
        <label for='studyTime'>Time spent stydying (in hours): </label>
        <input type='number' step="0.001" name='studyTime' value="<%= studyTime %>"/><br>
        <label for='eating'>Regularity and quality of eating: </label>
        <fieldset id="eating">
          <input type="radio" value="1" name="eating"> 1<br>
          <input type="radio" value="2" name="eating"> 2<br>
          <input type="radio" value="3" name="eating"> 3<br>
          <input type="radio" value="4" name="eating"> 4<br>
          <input type="radio" value="5" name="eating"> 5<br>
        </fieldset>
        <label for='mood'>Mood: </label>
        <fieldset id="mood">
          <input type="radio" value="1" name="mood"> 1<br>
          <input type="radio" value="2" name="mood"> 2<br>
          <input type="radio" value="3" name="mood"> 3<br>
          <input type="radio" value="4" name="mood"> 4<br>
          <input type="radio" value="5" name="mood"> 5<br>
        </fieldset>
        <input type='submit' value="Submit!"/>
    </form>
<%- include('./partials/footer.ejs') %>
